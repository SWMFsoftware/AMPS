! EnforceRequestedMeshResolution=off !on,off

  BlockCells=5,5,5
  GhostCells=2,2,2
! CutCellVolumeCalculationMaxRefinmentLevel=1

  NastranSurfaceUserData=on !!!on, off
  ControlParticleInsideNastranSurface=off !!!on,of
  
#endGeneral


