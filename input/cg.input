StdoutErrorLog=off !on,off -> print out error message on the screen


CouplerMode=ices !!off, ices, swmf



#endmain

#include species.input

#UserDefinitions
  PIC=on ! on, off
  Mesh=on ! on, off
#endUserDefinitions

#ParticleCollisions
  model = HS !!off !HS ! HS, off
  SampleCollisionFrequency=off !!on !on, off

  CollisionCrossSection=const \\ !const, function
    const (H2O,H2O)= 2.0E-19

#endParticleCollisions

#IDF
  Model=LB  !off,LB,qLB
  vtRelaxation=off !on,off
  vvRelaxation=off !on,off
  rtRelaxation=on !on,off

  nVibModes(H2O=2)
  nRotModes(H2O=3)

  RotZnum(H2O=5)
  VibTemp(H2O=2000)
#endIDF


#block ../cg.pl !process settings of the moon module
  Gravity3D=on !on,off

  HeliocentricDistance=3.3*_AU_
  subSolarPointAzimuth=0.0

  !!Gas parameters
  ndist=4 !!1.3AU->0, 2.0AU->1, 2.7AU->2, 3.0AU->3, 3.3AU->4
  BjornProductionRate(H2O)=1.0e24	    
  
  !!Dust parameters
  DustTotalMassProductionRate=1.0
  PowerLawIndex=4.0	  
  dustRmin=1.0e-7
  dustRmax=1.0e-2
  nDustRadiusGroups=10

#endblock


#block ../exosphere.pl !process the data block with the setting of the exospehre model 

  SPICE=off !on, off

#endblock

#end
