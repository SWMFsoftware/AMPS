//contains definitions of macro used for compiling the exosphere model

//defiend the surface data structure the is used to sample to surface model data
#define _EXOSPHERE__SURFACE_DATA_STRUCTURE__USER_DEFINED_    0
#define _EXOSPHERE__SURFACE_DATA_STRUCTURE__DEFAULT_         1

//default setting of the exospheric model
//descriptors of the source processes
#define _EXOSPHERE_SOURCE__ON_    0
#define _EXOSPHERE_SOURCE__OFF_   1

//energy distribution inversion: 
// numeric vs user defined solver for integral equation
#define _EXOSPHERE__ENERGY_DISTRIBUTION_INVERSION__NUMERIC_      0
#define _EXOSPHERE__ENERGY_DISTRIBUTION_INVERSION__USER_DEFINED_ 1

// injection angle distribution
#define _EXOSPHERE__INJECTION_ANGLE_DISTRIBUTION__UNIFORM_        0
#define _EXOSPHERE__INJECTION_ANGLE_DISTRIBUTION__KNUDSEN_COSINE_ 1

//sputtering mode: calculation of the source rate using Yield vs taking the source rate from the input file 
#define _EXOSPHERE_SOURCE__SOLAR_WIND_SPUTTERING_MODE__YIELD_        0
#define _EXOSPHERE_SOURCE__SOLAR_WIND_SPUTTERING_MODE__USER_SOURCE_RATE_  1
#define _EXOSPHERE_SOURCE__SOLAR_WIND_SPUTTERING_MODE__UNIFORM_USER_SOURCE_RATE_  2

//the time dependence modes of the ion injectino with the parameters of the background plasma
#define _EXOSPHERE_SOURCE__BACKGROUND_PLASMA_ION_INJECTION_MODE__STEADY_STATE_    0
#define _EXOSPHERE_SOURCE__BACKGROUND_PLASMA_ION_INJECTION_MODE__TIME_DEPENDENT_  1
